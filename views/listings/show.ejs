<% layout("/layouts/boilerplate") %>
    <div class="row mt-2">
        <div class="col-8 offset-3">
            <h3>
                <%= listing.title %>
            </h3>
        </div>
        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <%= listing.description %><br>
                        &#8377;
<%= listing.price.toLocaleString("en-IN")%><br>
                            <%= listing.location %><br>
                                <%= listing.country %>
                </p>
            </div>
        </div>
        <br>
        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btns edit-btn col-1 offset-3"
                style="color: white;">Edit</a>

            <form method="post" action="/listings/<%=listing._id%>?_method=Delete">
                <button class="btn btn-dark  offset-3">
                    Delete
                </button>
            </form>
        </div>
        <div class="col-8 offset-3 mb-3">
            <h4>Reviews</h4>
            <form action="/listings/<%=listing._id%>/reviews" method="post" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <div>
                        <label for="rating">Rating</label>
                        <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]">
                    </div>
                    <div class="mt-3 mb-3">
                        <label for="comment" class="form-label">Comment</label>
                        <textarea class="form-control" name="review[comment]" id="comment" rows="9" required></textarea>
                        <div class="invalid-feedback">Please add comments.</div>
                    </div>
                </div>

                <br>
                <button type="submit" class="btn btn-outline-dark">Submit</button>
            </form>

            <hr>
            <h4><b>All Reviews</b></h4>
            <div class="row">
                <% for(review of listing.reviews) { %>
                    <div class="card col-5 mb-3 ms-3">
                        <div class="card-body">
                            <h5 class="card-title">Jane Doe</h5>
                            <p class="card-text"><%= review.comment %></p>
                            <p class="card-text"> <%= review.rating %></p>
                        </div>
                        <form class="mb-3" method="post" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=Delete">
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>  
                    </div>
                <%}%>
            </div>
            </div>
        </div>
    </div>
    <br><br>